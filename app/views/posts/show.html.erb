<% content_for :title, "#{@post.title} || Isaac Bonora" %>

<div class="w-full mt-12">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if authenticated? %>
    <div class="opacity-25 hover:opacity-100 sm:-left-36 sm:absolute flex flex-col ">
      <%= link_to "Edit this post", edit_post_path(@post), class: "" %>
      <%= link_to "Back to posts", posts_path, class: "" %>
      <%= button_to "Destroy this post", @post, method: :delete, form_class: "", class: "cursor-pointer text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  <% end %>

  <%= render @post %>

</div>
